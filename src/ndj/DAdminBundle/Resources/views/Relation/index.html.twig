{% extends 'ndjDAdminBundle:Default:layout.html.twig' %}

{% block body -%}
    <h1>Relation list</h1>

    <table class="records_list">
        <thead>
            <tr>
                <th>Id</th>
                <th>Cat</th>
                <th>Cout</th>
                <th>Daterelation</th>
                <th>Fin</th>
                <th>Etat1</th>
                <th>Etat2</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('relation_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.cat }}</td>
                <td>{{ entity.cout }}</td>
                <td>{% if entity.dateRelation %}{{ entity.dateRelation|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{{ entity.fin }}</td>
                <td>{{ entity.etat1 }}</td>
                <td>{{ entity.etat2 }}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('relation_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('relation_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('relation_new') }}">
                Create a new entry
            </a>
        </li>
    </ul>
    {% endblock %}
