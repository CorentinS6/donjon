{% extends 'ndjDAdminBundle:Default:layout.html.twig' %}

{% block body -%}
    <h1>Relation</h1>

    <table class="record_properties">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ entity.id }}</td>
            </tr>
            <tr>
                <th>Cat</th>
                <td>{{ entity.cat }}</td>
            </tr>
            <tr>
                <th>Cout</th>
                <td>{{ entity.cout }}</td>
            </tr>
            <tr>
                <th>Daterelation</th>
                <td>{{ entity.dateRelation|date('Y-m-d H:i:s') }}</td>
            </tr>
            <tr>
                <th>Fin</th>
                <td>{{ entity.fin }}</td>
            </tr>
            <tr>
                <th>Etat1</th>
                <td>{{ entity.etat1 }}</td>
            </tr>
            <tr>
                <th>Etat2</th>
                <td>{{ entity.etat2 }}</td>
            </tr>
        </tbody>
    </table>

        <ul class="record_actions">
    <li>
        <a href="{{ path('relation') }}">
            Back to the list
        </a>
    </li>
    <li>
        <a href="{{ path('relation_edit', { 'id': entity.id }) }}">
            Edit
        </a>
    </li>
    <li>
        <form action="{{ path('relation_delete', { 'id': entity.id }) }}" method="post">
            <input type="hidden" name="_method" value="DELETE" />
            {{ form_widget(delete_form) }}
            <button type="submit">Delete</button>
        </form>
    </li>
</ul>
{% endblock %}
