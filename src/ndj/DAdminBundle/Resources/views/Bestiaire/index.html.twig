{% extends 'ndjDAdminBundle:Default:layout.html.twig' %}

{% block body -%}
    <h1>Bestiaire list</h1>

    <table class="records_list">
        <thead>
            <tr>
                <th>Id</th>
                <th>Prenom</th>
                <th>Acrobatie</th>
                <th>Bagarre</th>
                <th>Charme</th>
                <th>Acuite</th>
                <th>Age</th>
                <th>Experience</th>
                <th>Renommee</th>
                <th>Pvie</th>
                <th>Pviemax</th>
                <th>Repos</th>
                <th>Avendre</th>
                <th>Cout</th>
                <th>Position</th>
                <th>Pouvoirs</th>
                <th>Talents</th>
                <th>Envoutement</th>
                <th>Ordre</th>
                <th>Points</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('bestiaire_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.prenom }}</td>
                <td>{{ entity.acrobatie }}</td>
                <td>{{ entity.bagarre }}</td>
                <td>{{ entity.charme }}</td>
                <td>{{ entity.acuite }}</td>
                <td>{{ entity.age }}</td>
                <td>{{ entity.experience }}</td>
                <td>{{ entity.renommee }}</td>
                <td>{{ entity.pvie }}</td>
                <td>{{ entity.pvieMax }}</td>
                <td>{{ entity.repos }}</td>
                <td>{{ entity.aVendre }}</td>
                <td>{{ entity.cout }}</td>
                <td>{{ entity.position }}</td>
                <td>{{ entity.pouvoirs }}</td>
                <td>{{ entity.talents }}</td>
                <td>{{ entity.envoutement }}</td>
                <td>{{ entity.ordre }}</td>
                <td>{{ entity.points }}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('bestiaire_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('bestiaire_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('bestiaire_new') }}">
                Create a new entry
            </a>
        </li>
    </ul>
    {% endblock %}
