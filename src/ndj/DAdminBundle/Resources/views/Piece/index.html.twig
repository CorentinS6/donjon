{% extends 'ndjDAdminBundle:Default:layout.html.twig' %}

{% block body -%}
    <h1>Piece list</h1>

    <table class="records_list">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nom</th>
                <th>Posx</th>
                <th>Posy</th>
                <th>Taillex</th>
                <th>Tailley</th>
                <th>Couchesol</th>
                <th>Couchesol2</th>
                <th>Couchemobilier</th>
                <th>Actions</th>
                <th>Etat</th>
                <th>Lumiere</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('piece_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.nom }}</td>
                <td>{{ entity.posx }}</td>
                <td>{{ entity.posy }}</td>
                <td>{{ entity.taillex }}</td>
                <td>{{ entity.tailley }}</td>
                <td>{{ entity.coucheSol }}</td>
                <td>{{ entity.coucheSol2 }}</td>
                <td>{{ entity.coucheMobilier }}</td>
                <td>{{ entity.actions }}</td>
                <td>{{ entity.etat }}</td>
                <td>{{ entity.lumiere }}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('piece_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('piece_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('piece_new') }}">
                Create a new entry
            </a>
        </li>
    </ul>
    {% endblock %}
