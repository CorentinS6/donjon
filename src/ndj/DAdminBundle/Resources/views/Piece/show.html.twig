{% extends 'ndjDAdminBundle:Default:layout.html.twig' %}

{% block body -%}
    <h1>Piece</h1>

    <table class="record_properties">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ entity.id }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ entity.nom }}</td>
            </tr>
            <tr>
                <th>Posx</th>
                <td>{{ entity.posx }}</td>
            </tr>
            <tr>
                <th>Posy</th>
                <td>{{ entity.posy }}</td>
            </tr>
            <tr>
                <th>Taillex</th>
                <td>{{ entity.taillex }}</td>
            </tr>
            <tr>
                <th>Tailley</th>
                <td>{{ entity.tailley }}</td>
            </tr>
            <tr>
                <th>Couchesol</th>
                <td>{{ entity.coucheSol }}</td>
            </tr>
            <tr>
                <th>Couchesol2</th>
                <td>{{ entity.coucheSol2 }}</td>
            </tr>
            <tr>
                <th>Couchemobilier</th>
                <td>{{ entity.coucheMobilier }}</td>
            </tr>
            <tr>
                <th>Actions</th>
                <td>{{ entity.actions }}</td>
            </tr>
            <tr>
                <th>Etat</th>
                <td>{{ entity.etat }}</td>
            </tr>
            <tr>
                <th>Lumiere</th>
                <td>{{ entity.lumiere }}</td>
            </tr>
        </tbody>
    </table>

        <ul class="record_actions">
    <li>
        <a href="{{ path('piece') }}">
            Back to the list
        </a>
    </li>
    <li>
        <a href="{{ path('piece_edit', { 'id': entity.id }) }}">
            Edit
        </a>
    </li>
    <li>
        <form action="{{ path('piece_delete', { 'id': entity.id }) }}" method="post">
            <input type="hidden" name="_method" value="DELETE" />
            {{ form_widget(delete_form) }}
            <button type="submit">Delete</button>
        </form>
    </li>
</ul>
{% endblock %}
