{% extends 'ndjDAdminBundle:Default:layout.html.twig' %}

{% block body -%}
    <h1>Evenement list</h1>

    <table class="records_list">
        <thead>
            <tr>
                <th>Id</th>
                <th>Dest</th>
                <th>Content</th>
                <th>Dt</th>
                <th>Read</th>
                <th>Cat</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('evenement_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.dest }}</td>
                <td>{{ entity.content }}</td>
                <td>{% if entity.dt %}{{ entity.dt|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{{ entity.read }}</td>
                <td>{{ entity.cat }}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('evenement_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('evenement_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('evenement_new') }}">
                Create a new entry
            </a>
        </li>
    </ul>
    {% endblock %}
