<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.1//EN" "http://www.w3.org/TR/xhtml11/DTD/xhtml11.dtd">
<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en">
    <head>
        <meta http-equiv="content-type" content="text/html; charset=UTF-8" />
        <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}" />
        <title>{% block title %}Donjon{% endblock %}</title>
        {% block stylesheets %}
        {% stylesheets
            'bundles/ndjdgame/css/*'
            'bundles/ndjdgame/js/jquery-ui-1.9.2.custom/css/custom-theme/jquery-ui-1.9.2.custom.css'
            'bundles/ndjdgame/js/jquery.tablesorter/themes/blue/style.css'
            'bundles/ndjdgame/js/jquery.contextmenu/jquery.contextMenu.css'
            'bundles/ndjdgame/js/jquery.layout/layout-default-latest.css'
             output='css/dgame.compiled.css'  filter='cssrewrite' %}
        <link href="{{ asset_url }}" rel="stylesheet" type="text/css" />
	{% endstylesheets %}
        <link href="http://fonts.googleapis.com/css?family=Amatic+SC:400,700" rel="stylesheet" type="text/css" />
        {% endblock stylesheets %}
       {% block javascripts %}
<script> var dir = "{{ asset('') }}"; var img_dir = "{{ asset('bundles/ndjdgame/images/') }}"; var css_dir = "{{ asset('bundles/ndjdgame/css/') }}"; var js_dir = "{{ asset('bundles/ndjdgame/js/') }}"; </script>
<script type="text/javascript" src="{{ asset('bundles/fosjsrouting/js/router.js') }}"></script>
<script type="text/javascript" src="{{ path('fos_js_routing_js', {"callback": "fos.Router.setData"}) }}"></script>
	{% javascripts
    		'@ndjDGameBundle/Resources/public/js/jquery-1.8.2.min.js'
    		'@ndjDGameBundle/Resources/public/js/jquery-ui-1.9.2.custom/js/jquery-ui-1.9.2.custom.min.js'
    		
    		'@ndjDGameBundle/Resources/public/js/jquery.jeditable.mini.js'
    		'@ndjDGameBundle/Resources/public/js/jquery.hotkeys.js'
    		'@ndjDGameBundle/Resources/public/js/jquery.scrollTo-1.4.3.1-min.js'
    		'@ndjDGameBundle/Resources/public/js/jquery.localscroll-1.2.7-min.js'
    		'@ndjDGameBundle/Resources/public/js/jquery.serialScroll-1.2.2-min.js'
    		'@ndjDGameBundle/Resources/public/js/jquery.tablesorter/jquery.tablesorter.min.js'
    		'@ndjDGameBundle/Resources/public/js/jquery.tablesorter/jquery.tablesorter.pager.min.js'
    		'@ndjDGameBundle/Resources/public/js/jquery.tablesorter/jquery.tablesorter.widgets.min.js'
    		'@ndjDGameBundle/Resources/public/js/jquery.contextmenu/jquery.contextMenu.js'
    		'@ndjDGameBundle/Resources/public/js/jquery.layout/jquery.layout-latest.min.js'
    		
    		'@ndjDGameBundle/Resources/public/js/outils.js'
    		'@ndjDGameBundle/Resources/public/js/donjon.js'
                '@ndjDGameBundle/Resources/public/js/dgame.js'
    		'@ndjDGameBundle/Resources/public/js/gardien.js'
    		'@ndjDGameBundle/Resources/public/js/aventurier.js'
    		
    		output='js/main.compiled.js' %}<script type="text/javascript" src="{{ asset_url }}"></script>
        {# // '@ndjDGameBundle/Resources/public/js/donjon_map.js' #}
            {#
            
            '@ndjDGameBundle/Resources/public/js/check_form.js'
            '@ndjDGameBundle/Resources/public/js/controle.js'
            '@ndjDGameBundle/Resources/public/js/nospam.js'
            
            '@ndjDGameBundle/Resources/public/js/gardien.js'
            '@ndjDGameBundle/Resources/public/js/aventurier.js'
            
		{% set controller = app.request.attributes.get('_controller')|split('::')[0]|split("\\")[3] %}
		{% if controller=='GameDonjonController' %}
			<script type="text/javascript" src="{{ asset('bundles/ndjdgame/js/gardien.js') }}"></script>
		{% elseif controller=='GameAventurierController' %}
			<script type="text/javascript" src="{{ asset('bundles/ndjdgame/js/aventurier.js') }}"></script>
		{% endif %}
            #}
                
	{% endjavascripts %}
        {% endblock javascripts %}
        </head>
    <body>
        <div id="container">{% block body %}{% endblock %}</div>
    </body>
</html>